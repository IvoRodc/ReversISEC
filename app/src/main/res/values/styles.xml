<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/vermelhoISEC</item>
        <item name="colorPrimaryDark">@color/vermelhoISEC</item>
        <item name="colorAccent">@color/cinzaISEC</item>
        <item name="android:statusBarColor">@color/vermelhoISEC</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowExitTransition">@transition/change_image_transform</item>
    </style>

    <style name="AppTheme.Buttons" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">28sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
