<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.amov.grupo32.reversisec">

    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="false" />

    <application
        android:name=".ReversISEC.SharedPreferences.GlobalProfile"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuPrincipalActivity" />
        <activity android:name=".MenuDefinicoesActivity" />
        <activity android:name=".PerfilActivity" />
        <activity
            android:name=".CameraActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".GameActivity" />
        <activity android:name=".CreditosActivity" />
        <activity android:name=".HistoricoActivity"></activity>
    </application>

</manifest>